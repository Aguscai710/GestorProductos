@model IEnumerable<PNT1_Grupo6.Models.Proveedor>

@{
    ViewData["Title"] = "Index";
}

<h1>Proveedores</h1>
@if (TempData["ProveedorError"] != null)
{
    <div class="alert alert-danger">
        @TempData["ProveedorError"]
    </div>}
<p>
    <a class="btn-create" asp-action="Create">Crear nuevo</a>
</p>

<form action="@Url.Action("BuscarPorNombre", "Proveedores")" method="GET">
    <input type="text" name="q" placeholder="Buscar..." />
    <button type="submit">Buscar</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rubro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rubro)
                </td>
                <td>
                    <a class="verde" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a class="amarillo" asp-action="Details" asp-route-id="@item.Id">Info</a> |
                    <a class="rojo" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .fondo-tabla {
        background-color: darkgray;
        border: 3px solid black;
    }

    .blanco {
        color: white;
    }

    .btn-create {
        display: inline;
        padding: 8px 16px;
        background-color: green;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        margin-left: 300px;
    }

        .btn-create:hover {
            color: black;
            text-decoration: none;
        }

    h1 {
        display: inline;
    }

    .verde {
        padding: 8px 16px;
        background-color: green;
        color: black;
        text-decoration: none;
        border-radius: 15px;
    }

    .amarillo {
        padding: 8px 16px;
        background-color: yellow;
        color: black;
        text-decoration: none;
        border-radius: 15px;
    }

    .rojo {
        padding: 8px 16px;
        background-color: red;
        color: black;
        text-decoration: none;
        border-radius: 15px;
    }
    .table{
        border:3px solid black;
    }
</style>
