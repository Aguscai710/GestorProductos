@model PNT1_Grupo6.Models.Usuario

@{
    ViewData["Title"] = "Details";
}
<div class="fondo">
    <h1>Mas Informacion</h1>
</div>
    

    <div>
        <h4>Usuario</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Apellido)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Apellido)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Dni)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Dni)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Password)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Password)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RolUsuario)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RolUsuario)
            </dd>
        </dl>
    </div>
    <div class="botones">
        <a class="rojo" asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
        <a class="verde" asp-action="Index">Volver a la lista</a>
    </div>



<style>
   .row{margin-left:400px;

   }
   .botones{
       margin-left:400px;
   }
    .rojo {
        padding: 8px 16px;
        background-color: red;
        color: white;
        text-decoration: none;
        border-radius: 5px;
    }
    .rojo:hover{
        color:white;
        text-decoration:none;
        background-color:darkred;
    }
    .verde {
        padding: 8px 16px;
        background-color: green;
        color: white;
        text-decoration: none;
        border-radius: 5px;
    }
        .verde:hover {
            color: white;
            text-decoration: none;
            background-color:darkgreen;
        }

    .fondo {
        background-color: #1861ac;
        border-radius: 10px;
        color: white;
        text-align:center;
    }
