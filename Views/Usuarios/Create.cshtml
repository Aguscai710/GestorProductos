@model PNT1_Grupo6.Models.Usuario

@{
    ViewData["Title"] = "Create";
}
<body class="colorBase">
    <div class="fondo">
        <h1>Crear</h1>

        <h4>Usuario</h4>
    </div>
    <hr />
    <div class="cont">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Apellido" class="control-label"></label>
                        <input asp-for="Apellido" class="form-control" />
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Dni" class="control-label"></label>
                        <input asp-for="Dni" class="form-control" />
                        <span asp-validation-for="Dni" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RolUsuario" class="control-label"></label>
                        <select asp-for="RolUsuario" class="form-control" asp-items="Html.GetEnumSelectList<Rol>()">
                            <option selected="selected" value="">elija uno</option>
                        </select>
                        <span asp-validation-for="RolUsuario" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Crear" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div>
        <a class="rojo" asp-action="Index">Volver a la lista</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>

<style>
    .fondo {
        background-color: #1861ac;
        border-radius: 10px;
        color: white;
        text-align: center;
    }
    .cont{
        margin-left:460px;
        
    }
    .rojo {
        padding: 8px 16px;
        background-color: red;
        color: white;
        text-decoration: none;
        border-radius: 5px;
    }
    .rojo:hover{
        background-color:darkred;
        color:white;
        text-decoration:none;
    }
    .btn{
       background-color:green;
    }
    .btn:hover{
        background-color:darkgreen;
    }
</style>

